  h1 Hours Summary
  .layout
    .layout-cell
      .grid
        .group
          .col.span_6_of_6.c
            h2 Current Week's Hours 
            h3 Ending (mm/dd/yyyy)          
        .group
          .metric.col.span_2_of_6
            .metric-value 9999
            .metric-label Total
          .metric.col.span_2_of_6
            .metric-value 9999
            .metric-label Billable
          .metric.col.span_2_of_6
            .metric-value 9999
            .metric-label Non-Billable
    .layout-cell
      .grid
        .group
          .col.span_6_of_6.c
            h2 Previous Week's Hours
            h3 Ending (mm/dd/yyyy)            
        .group
          .metric.col.span_2_of_6
            .metric-value 9999
            .metric-label Total
          .metric.col.span_2_of_6
            .metric-value 9999
            .metric-label Billable
          .metric.col.span_2_of_6
            .metric-value 9999
            .metric-label Non-Billable

section
  h1 My Projects


  section
    h2 Project Name (% complete) - repeat
    div health indicator

    h3 Time Summary

    .layout
      .layout-cell
        .grid
          .group
            .col.span_6_of_6
              h2 Current Week's Hours 
              h3 Ending (mm/dd/yyyy)          
          .group
            .metric.col.span_2_of_6
              .metric-value 9999
              .metric-label Total
            .metric.col.span_2_of_6
              .metric-value 9999
              .metric-label Billable
            .metric.col.span_2_of_6
              .metric-value 9999
              .metric-label Non-Billable
      .layout-cell
        .grid
          .group
            .col.span_6_of_6
              h2 Previous Week's Hours
              h3 Ending (mm/dd/yyyy)            
          .group
            .metric.col.span_2_of_6
              .metric-value 9999
              .metric-label Total
            .metric.col.span_2_of_6
              .metric-value 9999
              .metric-label Billable
            .metric.col.span_2_of_6
