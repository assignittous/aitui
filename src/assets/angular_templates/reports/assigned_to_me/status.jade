    .layout
      .layout-cell
        .grid
          .group
            .col.span_6_of_6
              h2 Current Week's Tasks       
          .group
            .col.span_6_of_6
              p * due to start
              p * unfinished (not 100%), start date < monday
              p * hours booked on task
              p * current percent complete?
      .layout-cell          
        .grid
          .group
            .col.span_6_of_6
              h2 Previous Week's Tasks      
          .group
            .col.span_6_of_6
              p * completed last wk
              p * completed date >= first day of last wk
              p * scheduled end <= last day of last wk
              p * scheduled start <= last day of last week
              p * hours booked on task
              p * percent complete and delta




