section
  md-list.main
    md-list-item.checklist("ng-repeat" = "item in checklist.items track by item.id", "ng-show"="checklist.items.length > 0" )
      md-item-content
        .checkbox
          .content
            md-checkbox(md-no-ink="true" ng-model="item.is_complete", ng-change="toggle(item)", aria-label="Completed?")
        .main
          .content
            .markdown-block(btf-markdown="item.description",ng-bind="item.description")
          .content(ng-show="item.is_editing == true")
            .edit-block
              textarea(msd-elastic="", ng-model="item.description")    
        .icon
          .content
            md-button.icon-dark(type="button", ng-click="moreChecklistActions(item)", aria-label="label", md-no-ink="true")
              i.aitu-navigation-more-vert
              md-tooltip More Actions    
  .blank-slate(ng-show="checklist.items.length == 0")
    h1 There are currently no checklist items.
