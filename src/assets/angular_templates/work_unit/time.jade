section
  md-list.main
    md-list-item("ng-repeat" = "item in time_entries.items track by item.id" )
      md-item-content
        .icon
          .content
            i.icon-time.s24(ng-show="item.is_billable != true")
            i.icon-billable.s24(ng-show="item.is_billable")
        .main
          .content
            .line-1
              .name(ng-bind="item.user.full_name")
            .line-2
              span.indicator {{ item.incurred_at }}
        .icon
          .content
            span
              | {{ item.effort / 60 | number:2 }} h
        .icon
          .content
            md-button.icon-dark(type="button", ng-click="moreTimeActions(item)", aria-label="label", md-no-ink="true")
              i.icon-more.s24 &nbsp;
              md-tooltip(md-direction="bottom left") More Actions            
  .blank-slate(ng-show="time_entries.items.length == 0")
    h1 There are currently no time entries.